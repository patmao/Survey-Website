<%- include ../partials/header.ejs %>

    <%- include ../partials/main_nav.ejs %>

        <!-- Content for the Add page -->
        <div class="container">
            <div class="row">
                <div class="offset-md-3 col-md-6">
                    <h1>
                        <%= title %>
                    </h1>

                    <form class="form" method="POST">
                        <div class="form-group">
                            <label for="nameTextField">Contact Name</label>
                            <input type="text" class="form-control" id="nameTextField"
                                placeholder="Enter the Contact Name" name="contact_name"
                                value="<%= contact.contact_name %>" required>
                        </div>

                        <div class="form-group">
                            <label for="authorTextField">Contact Number</label>
                            <input type="text" class="form-control" id="numberTextField"
                                placeholder="Enter the Contact Numer" name="contact_number"
                                value="<%= contact.contact_number %>" required>
                        </div>

                        <div class="form-group">
                            <label for="publishedTextField">Contact Email</label>
                            <input type="text" class="form-control" id="emailTextField"
                                placeholder="Enter the Contact Email" name="contact_email"
                                value="<%= contact.contact_email %>" required>
                        </div>

                        <button class="btn btn-primary" type="submit">
                            <i class="fas fa-edit"></i> Submit</button>

                        <a href="/business-contacts-list" class="btn btn-warning">
                            <i class="fas fa-undo"></i> Cancel</a>

                    </form>
                </div>

            </div>
        </div>


        <%- include ../partials/bottom_nav.ejs %>

            <%- include ../partials/footer.ejs %>
<%- include ../partials/header.ejs %>

    <%- include ../partials/main_nav.ejs %>


        <!-- Main Content -->
        <main class="container">
            <div class="row">
                <div class="offset-md-1 col-md-11">
                    <h1>
                        <%= title %>
                    </h1>

                    <% if(typeof displayName=='string' && displayName) { %>
                        <a href="/business-contacts-list/add" class="btn btn-primary" role="button">
                            <i class="fas fa-plus-circle"></i> Add a Contact</a>
                        <% } %>
                            <br>
                            <table class="table table-bordered table-striped table-hover">
                                <!-- Header Row-->
                                <tr class="d-flex">
                                    <% if(typeof displayName=='string' && displayName) { %>
                                        <th class="text-center col-3">Name</th>
                                        <th class="text-center col-3">Number</th>
                                        <th class="text-center col-4">Email Address</th>
                                        <th class="text-center col-1"></th>
                                        <th class="text-center col-1"></th>
                                        <% } else { %>
                                            <th class="text-center col-3">Name</th>
                                            <th class="text-center col-3">Number</th>
                                            <th class="text-center col-6">Email Address</th>
                                            <% } %>
                                </tr>

                                <!-- Repeatable Template Row -->

                                <% for(let count=0; count < BusinessContactsList.length; count++) { %>
                                    <tr class="d-flex">
                                        <% if(typeof displayName=='string' && displayName) { %>
                                            <td class="text-center col-3">
                                                <%= BusinessContactsList[count].contact_name %>
                                            </td>
                                            <td class="text-center col-3">
                                                <%= BusinessContactsList[count].contact_number %>
                                            </td>
                                            <td class="text-center col-4">
                                                <%= BusinessContactsList[count].contact_email %>
                                            </td>
                                            <td class="text-center col-1">
                                                <a href="/business-contacts-list/edit/<%= BusinessContactsList[count]._id %>"
                                                    class="btn btn-primary btn-sm">
                                                    <i class="fas fa-pencil-alt"></i> Edit</a>
                                            </td>
                                            <td class="text-center col-1">
                                                <a href="/business-contacts-list/delete/<%= BusinessContactsList[count]._id %>"
                                                    class="btn btn-danger btn-sm">
                                                    <i class="fas fa-trash-alt"></i> Delete</a>
                                            </td>
                                            <% } else { %>
                                                <td class="text-center col-3">
                                                    <%= BusinessContactsList[count].contact_name %>
                                                </td>
                                                <td class="text-center col-3">
                                                    <%= BusinessContactsList[count].contact_number %>
                                                </td>
                                                <td class="text-center col-6">
                                                    <%= BusinessContactsList[count].contact_email %>
                                                </td>
                                                <% } %>
                                    </tr>
                                    <% } %>
                            </table>
                </div>
            </div>
        </main>

        <%- include ../partials/bottom_nav.ejs %>

            <%- include ../partials/footer.ejs %>
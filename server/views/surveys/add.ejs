<%- include ../partials/header.ejs %>

    <%- include ../partials/main_nav.ejs %>

        <!-- Content for the Add page -->
            <div class="row" style="background-color:rgb(38, 179, 214);">
                <div class="offset-md-3 col-md-6">
                    <h1>
                        <%= title %>
                    </h1>

                    <form class="form" method="POST">
                        <div class="form-group">
                            <label for="nameTextField">Name</label>
                            <input type="text" class="form-control" id="nameTextField"
                                placeholder="Enter your name" name="name" required>
                        </div>

                        <div class="form-group">
                            <label for="emailTextField">Email</label>
                            <input type="text" class="form-control" id="emailTextField" placeholder="Enter your email"
                                name="email" required>
                        </div>

                        <div class="form-group">
                            <label for="q1TextField">What's your major?</label>
                            <textarea type="text" class="form-control" id="q1TextField"
                                placeholder="Enter your answer here" name="question1" required></textarea>
                        </div>

                        <div class="form-group">
                            <label for="q2TextField">What campus are you in?</label>
                            <textarea type="text" class="form-control" id="q2TextField"
                                placeholder="Enter your answer here" name="question2" required></textarea>
                        </div>
                        <div class="form-group">
                            <label for="q3TextField">What do you like about your program?</label>
                            <textarea type="text" class="form-control" id="q3TextField"
                                placeholder="Enter your answer here" name="question3" required></textarea>
                        </div>
                        <div class="form-group">
                            <label for="q4TextField">If you could have a moment to recommend Centennial College, what would you say?</label>
                            <textarea type="text" class="form-control" id="q4TextField"
                                placeholder="Enter your answer here" name="question4" required></textarea>
                        </div>
                        <div class="form-group">
                            <label for="q5TextField">Your recommendation to improve the College experience?</label>
                            <textarea type="text" class="form-control" id="q5TextField"
                                placeholder="Enter your answer here" name="question5" required></textarea>
                        </div>

                        <button class="btn btn-primary add-page-btns" type="submit">
                            <i class="fas fa-edit"></i> Submit</button>

                        <a href="/surveys" class="btn btn-warning add-page-btns">
                            <i class="fas fa-undo"></i> Cancel</a>

                    </form>
                </div>

            </div>
        </div>



        <%- include ../partials/bottom_nav.ejs %>

            <%- include ../partials/footer.ejs %>
<%- include ../partials/header.ejs %>

    <%- include ../partials/main_nav.ejs %>

        <!-- Content for the Add page -->
        <div class="container">
            <div class="row">
                <div class="offset-md-3 col-md-6">
                    <h1>
                        <%= title %>
                    </h1>

                    <form class="form" method="POST">
                        <div class="form-group">
                            <label for="nameTextField">Survey Name</label>
                            <input type="text" class="form-control" id="nameTextField"
                                placeholder="Enter the Survey Name" name="name" required>
                        </div>

                        <div class="form-group">
                            <label for="nameTextField">Email</label>
                            <input type="text" class="form-control" id="nameTextField" placeholder="Enter your email"
                                name="email" required>
                        </div>

                        <div class="form-group">
                            <label for="authorTextField">Question 1</label>
                            <textarea type="text" class="form-control" id="numberTextField"
                                placeholder="Enter the Question Number 1" name="question1" required></textarea>
                        </div>

                        <div class="form-group">
                            <label for="authorTextField">Question 2</label>
                            <textarea type="text" class="form-control" id="numberTextField"
                                placeholder="Enter the Question Number 2" name="question2" required></textarea>
                        </div>
                        <div class="form-group">
                            <label for="authorTextField">Question 3</label>
                            <textarea type="text" class="form-control" id="numberTextField"
                                placeholder="Enter the Question Number 1" name="question3" required></textarea>
                        </div>
                        <div class="form-group">
                            <label for="authorTextField">Question 4</label>
                            <textarea type="text" class="form-control" id="numberTextField"
                                placeholder="Enter the Question Number 1" name="question4" required></textarea>
                        </div>
                        <div class="form-group">
                            <label for="authorTextField">Question 5</label>
                            <textarea type="text" class="form-control" id="numberTextField"
                                placeholder="Enter the Question Number 1" name="question5" required></textarea>
                        </div>

                        <button class="btn btn-primary add-page-btns" type="submit">
                            <i class="fas fa-edit"></i> Submit</button>

                        <a href="/surveys" class="btn btn-warning add-page-btns">
                            <i class="fas fa-undo"></i> Cancel</a>

                    </form>
                </div>

            </div>
        </div>



        <%- include ../partials/bottom_nav.ejs %>

            <%- include ../partials/footer.ejs %>